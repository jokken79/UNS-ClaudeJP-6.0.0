# ============================================================================
# LolaAppJp - Environment Variables
# ============================================================================
# Copy this file to .env and update the values
# cp .env.example .env
# ============================================================================

# ----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# ----------------------------------------------------------------------------
DATABASE_NAME=lolaappjp
DATABASE_USER=lola_admin
DATABASE_PASSWORD=lola_pass_2025_CHANGE_ME
DATABASE_HOST=db
DATABASE_PORT=5432

# Full DATABASE_URL (auto-constructed from above)
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}

# ----------------------------------------------------------------------------
# SECURITY
# ----------------------------------------------------------------------------
# IMPORTANT: Change this to a strong random string in production!
# Generate with: openssl rand -hex 32
SECRET_KEY=change_me_in_production_very_long_secret_key_minimum_32_characters_required

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ----------------------------------------------------------------------------
# REDIS
# ----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0
REDIS_CACHE_TTL=3600

# ----------------------------------------------------------------------------
# BACKEND
# ----------------------------------------------------------------------------
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DEBUG=True

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://frontend:3000,http://localhost

# ----------------------------------------------------------------------------
# FRONTEND
# ----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost/api
NODE_ENV=development

# ----------------------------------------------------------------------------
# AZURE COMPUTER VISION OCR (Optional)
# ----------------------------------------------------------------------------
# Sign up at https://azure.microsoft.com/services/cognitive-services/computer-vision/
AZURE_CV_ENDPOINT=
AZURE_CV_KEY=

# ----------------------------------------------------------------------------
# EMAIL (Optional - for future notifications)
# ----------------------------------------------------------------------------
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@lolaappjp.com
SMTP_FROM_NAME=LolaAppJp

# ----------------------------------------------------------------------------
# LINE NOTIFY (Optional - for future notifications)
# ----------------------------------------------------------------------------
LINE_NOTIFY_TOKEN=

# ----------------------------------------------------------------------------
# OBSERVABILITY
# ----------------------------------------------------------------------------
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
PROMETHEUS_METRICS_PORT=8001

# ----------------------------------------------------------------------------
# GRAFANA
# ----------------------------------------------------------------------------
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin_CHANGE_ME

# ----------------------------------------------------------------------------
# ADMINER
# ----------------------------------------------------------------------------
ADMINER_PORT=8080

# ----------------------------------------------------------------------------
# BACKUP
# ----------------------------------------------------------------------------
# Backup schedule (cron format for Asia/Tokyo timezone)
BACKUP_TIME=02:00
BACKUP_RETENTION_DAYS=30
BACKUP_RUN_ON_STARTUP=true

# ----------------------------------------------------------------------------
# TIMEZONE
# ----------------------------------------------------------------------------
TZ=Asia/Tokyo

# ----------------------------------------------------------------------------
# FILE UPLOAD
# ----------------------------------------------------------------------------
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=/app/uploads
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.pdf

# ----------------------------------------------------------------------------
# PAGINATION
# ----------------------------------------------------------------------------
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

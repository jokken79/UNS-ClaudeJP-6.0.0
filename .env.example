# ===============================
# DATABASE CONFIGURATION
# ===============================

# PostgreSQL Database Name (dejar como est√°)
POSTGRES_DB=uns_claudejp

# PostgreSQL Username (dejar como est√°)
POSTGRES_USER=uns_admin

# ‚ö†Ô∏è OBLIGATORIO: PostgreSQL Password
# CAMBIAR en producci√≥n a contrase√±a segura
# Ejemplo: Use1Str0ng_P@ssw0rd!2025
POSTGRES_PASSWORD=change-me-in-local

# Database Connection URL
# CAMBIAR: Reemplazar "change-me-in-local" con tu POSTGRES_PASSWORD
# Ejemplo: postgresql://uns_admin:Use1Str0ng_P@ssw0rd!2025@localhost:5432/uns_claudejp
DATABASE_URL=postgresql://uns_admin:change-me-in-local@localhost:5432/uns_claudejp

# ‚ö†Ô∏è OBLIGATORIO: Redis Cache Password
# CAMBIAR en producci√≥n a contrase√±a segura
# Requerido para autenticaci√≥n en Redis (requirepass)
REDIS_PASSWORD=change-me-in-local

# ‚ö†Ô∏è OBLIGATORIO: Grafana Admin Credentials
# CAMBIAR en producci√≥n a credenciales seguras
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-me-in-local

# ===============================
# SECURITY & JWT CONFIGURATION
# ===============================

# ‚ö†Ô∏è OBLIGATORIO: Secret Key for JWT Token Signing
# GENERAR NUEVO con Python:
#   python -c "import secrets; print(secrets.token_hex(32))"
#
# Ejemplo de SECRET_KEY generado:
#   a1b2c3d4e5f6789012345678901234567890abcdef1234567890abcdef123456
#
# ‚ö†Ô∏è NUNCA usar el ejemplo, generar uno √öNICO para tu instalaci√≥n
SECRET_KEY=change-me-to-a-64-byte-token

# JWT Algorithm (dejar como est√°)
ALGORITHM=HS256

# JWT Token Expiration (480 min = 8 horas)
ACCESS_TOKEN_EXPIRE_MINUTES=480

# JWT Audience & Issuer (dejar como est√°)
JWT_AUDIENCE=uns-claudejp::api
JWT_ISSUER=uns-claudejp

# ---- Application ----
APP_NAME=UNS-ClaudeJP 5.4.1
APP_VERSION=5.4.1
ENVIRONMENT=development
DEBUG=false
FRONTEND_URL=http://localhost:3000
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ---- File Storage ----
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760
REPORTS_DIR=./reports
LOG_FILE=./logs/uns-claudejp.log
LOG_LEVEL=INFO

# ===============================
# OCR & AI PROVIDERS (OPCIONAL)
# ===============================

# Habilitar OCR para procesamiento de documentos (Â±•Ê≠¥Êõ∏, Âú®Áïô„Ç´„Éº„Éâ, etc.)
# true = Activado | false = Desactivado
OCR_ENABLED=true

# Idiomas para Tesseract OCR (dejar como est√° para japon√©s + ingl√©s)
TESSERACT_LANG=jpn+eng

# üì∏ GEMINI API (Google AI - OPCIONAL)
# Obtener API key desde: https://makersuite.google.com/app/apikey
# Dejar vac√≠o si no usas Gemini OCR

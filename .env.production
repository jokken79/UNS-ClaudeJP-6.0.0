# =============================
# UNS-ClaudeJP 5.6.0 - PRODUCTION ENVIRONMENT
# =============================
#
# ⚠️  CRITICAL: This file contains production secrets
# NEVER commit to version control - add to .gitignore

# ===============================
# DATABASE CONFIGURATION
# ===============================

POSTGRES_DB=uns_claudejp
POSTGRES_USER=uns_admin
POSTGRES_PASSWORD=change-me-to-very-secure-random-password-32-chars-min
DATABASE_URL=postgresql://uns_admin:change-me-to-very-secure-random-password-32-chars-min@db:5432/uns_claudejp

# ⚠️  CRITICAL: Redis Cache Password
REDIS_PASSWORD=change-me-to-very-secure-random-password-32-chars-min

# ⚠️  CRITICAL: Grafana Admin Credentials
GRAFANA_ADMIN_USER=prodadmin
GRAFANA_ADMIN_PASSWORD=change-me-to-very-secure-random-password-32-chars-min

# ===============================
# SECURITY & JWT CONFIGURATION
# ===============================

# ⚠️  CRITICAL: Secret Key for JWT Token Signing
SECRET_KEY=change-me-to-very-secure-random-token-64-chars-min

ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480
JWT_AUDIENCE=uns-claudejp::api
JWT_ISSUER=uns-claudejp

# ===============================
# APPLICATION CONFIGURATION
# ===============================

APP_NAME=UNS-ClaudeJP 5.6.0
APP_VERSION=5.6.0

# ⚠️  CRITICAL: Set to 'production' for production deployment
ENVIRONMENT=production

# ⚠️  CRITICAL: Set to 'false' for production (never 'true')
DEBUG=false

# ⚠️  CRITICAL: Frontend URL for CORS
FRONTEND_URL=https://your-production-domain.com
BACKEND_CORS_ORIGINS=https://your-production-domain.com

# ===============================
# FILE STORAGE
# ===============================

UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760
REPORTS_DIR=./reports
LOG_FILE=./logs/uns-claudejp.log
LOG_LEVEL=WARNING

# ===============================
# OCR & AI PROVIDERS (OPTIONAL)
# ===============================

OCR_ENABLED=true
TESSERACT_LANG=jpn+eng
GEMINI_API_KEY=
GOOGLE_CLOUD_VISION_ENABLED=false
GOOGLE_CLOUD_VISION_API_KEY=
AZURE_COMPUTER_VISION_ENDPOINT=
AZURE_COMPUTER_VISION_KEY=
AZURE_COMPUTER_VISION_API_VERSION=2023-02-01-preview

# ===============================
# EMAIL CONFIGURATION
# ===============================

SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=noreply@your-production-domain.com
LINE_CHANNEL_ACCESS_TOKEN=

# ===============================
# OBSERVABILITY
# ===============================

NEXT_PUBLIC_OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317

